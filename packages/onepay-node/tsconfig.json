{
  "include": ["src"],
  "exclude": ["**/*.test.ts", "__tests__"],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
